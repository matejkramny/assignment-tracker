mixin navbar(number)
	.navbar.navbar-default(role="navigation")
		.navbar-header
			button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-ex-1-collapse")
				span.sr-only Toggle navigation bar
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand Assignments
		.collapse.navbar-collapse.navbar-ex-1-collapse
			ul.nav.navbar-nav
				li(class=number == 0 ? "active" : null)
					a(href="/") Home
				if user
					li(class=number == 1 ? "active" : null)
						a(href="/assignments") Assignments
			
			ul.nav.navbar-nav.navbar-right
				if user
					li(class=number == 2 ? "active" : null)
						a(href="/add") Add Assignment
					li
						a(href="/logout") Log out
				else
					li(class=number == 2 ? "active" : null)
						a(href="/auth") Login / Register